{
	"name": "@aias/hozo",
	"version": "0.2.0",
	"description": "Shared schema, relations, and validation for Red Cliff Record",
	"type": "module",
	"license": "MIT",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"scripts": {
		"build": "bunx --bun tsup src/index.ts --dts --format esm --sourcemap --clean",
		"dev:watch": "bun run build --watch",
		"lint": "bunx --bun eslint src --max-warnings=0",
		"check": "bunx --bun tsc --noEmit"
	},
	"dependencies": {
		"drizzle-zod": "1.0.0-beta.8-dbc3565"
	},
	"peerDependencies": {
		"drizzle-orm": "1.0.0-beta.8-dbc3565",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"drizzle-orm": "1.0.0-beta.8-dbc3565",
		"tsup": "^8.5.1",
		"zod": "^4.1.12"
	}
}
