# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@[tailscale-hostname-or-localhost]:5432/redcliffrecord"

# Front end server
PUBLIC_URL="http[s]://[tailscale-hostname-or-localhost]:[port]"
PUBLIC_DEV_PORT="5173" # Only for dev server

# OpenAI Configuration (Required for embeddings)
OPENAI_API_KEY="sk-..."

# Cloudflare R2 Storage (Required for media uploads)
CLOUDFLARE_ACCOUNT_ID="your-account-id"
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"
S3_REGION="auto"
S3_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
S3_BUCKET="your-bucket-name"
ASSETS_DOMAIN="https://your-assets-domain.com"

# Integration API Keys (Optional - only configure the ones you need)

# GitHub Integration
# Create token at: https://github.com/settings/tokens
# Required scopes: repo, user
GITHUB_TOKEN="github_pat_..."

# Airtable Integration
# IMPORTANT: This integration is configured specifically for the
# barnsworthburning project structure (https://github.com/Aias/barnsworthburning)
# Fork that repository if you want to use Airtable as a data source
# Get credentials at: https://airtable.com/create/tokens
AIRTABLE_BASE_ID="app..."
AIRTABLE_ACCESS_TOKEN="pat..."

# Raindrop.io Integration
# Create app at: https://app.raindrop.io/settings/integrations
RAINDROP_TEST_TOKEN="..."

# Readwise Integration
# Get token at: https://readwise.io/access_token
READWISE_TOKEN="..."

# Feedbin Integration
FEEDBIN_USERNAME="your@email.com"
FEEDBIN_PASSWORD="your-password"

# Twitter (X) Integration
# Cookie-based auth - get these from browser DevTools after logging into x.com
# DevTools → Application → Cookies → x.com → copy auth_token and ct0 values
TWITTER_AUTH_TOKEN="..."
TWITTER_CT0="..."
