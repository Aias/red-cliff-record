{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"verbatimModuleSyntax": true,
		"baseUrl": ".",
		"paths": {
			"@integrations/*": ["integrations/*"],
			"@schema/*": ["schema/*"],
			"@scripts/*": ["scripts/*"],
			"@utils/*": ["schema/utils/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
