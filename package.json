  "type": "module",
  "scripts": {
    "build": "bunx --bun vite build",
    "check": "bun run lint && bun run type-check && bun run format",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev": "bunx --bun vite",
    "dev:full": "bun run --filter '*' dev:watch",
    "dev:watch": "bunx --bun vite",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint --fix --type-aware .",
    "lint:check": "oxlint --type-aware .",
    "rcr": "bun src/server/cli/rcr/index.ts",
    "start": "bun run server.ts",
    "type-check": "tsgo --noEmit",
    "type-check:watch": "tsgo --noEmit --watch"
  },
