{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,

		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"checkJs": false,

		/* Bundled projects */
		"lib": ["dom", "dom.iterable", "ES2022"],
		"noEmit": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",

		/* Performance */
		"incremental": true,
		"disableSolutionSearching": true,
		"disableSourceOfProjectReferenceRedirect": true,

		/* Path Aliases */
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "./*.ts"],
	"exclude": [
		"**/node_modules/**/*",
		".pnpm/**/*",
		"build/**/*",
		"dist/**/*",
		".output/**/*",
		".vinxi/**/*",
		"**/*.generated.ts",
		"coverage/**/*",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
