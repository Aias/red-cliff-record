{
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/app/*": ["app/*"],
			"@/db/*": ["db/*"],
			"@schema/*": ["db/schema/*"]
		}
	},
	"include": ["app/**/*", "db/**/*", "integrations/**/*"],
	"exclude": ["node_modules", "build", "dist"]
}
